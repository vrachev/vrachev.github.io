---
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/global.css";
---

<BaseLayout pageTitle="this week">
  <div
    class="font-code_mono text-sm bg-[rgba(220,204,204,0.5)] rounded-lg p-4 shadow">
    <h2>status</h2>
    <div class="grid grid-cols-[auto,1fr]">
      <div>
        <p>
          last updated: <span class="italic underline"
            >{
              new Date("March 19, 2024").toLocaleDateString("en-US", {
                year: "numeric",
                month: "long",
                day: "numeric",
              })
            }</span
          >
        </p>
        <p>
          week: <span class="italic underline"
            >{
              new Date(
                new Date().setDate(new Date().getDate() - new Date().getDay()),
              ).toLocaleDateString("en-US", {
                year: "numeric",
                month: "long",
                day: "numeric",
              })
            }</span
          > to <span class="italic underline"
            >{
              new Date(
                new Date().setDate(
                  new Date().getDate() - new Date().getDay() + 6,
                ),
              ).toLocaleDateString("en-US", {
                year: "numeric",
                month: "long",
                day: "numeric",
              })
            }</span
          >
        </p>
      </div>
      <div class="flex flex-col items-end">
        <p>&lt; next week </p>
        <p>prev week &gt;</p>
      </div>
    </div>
  </div>
</BaseLayout>
